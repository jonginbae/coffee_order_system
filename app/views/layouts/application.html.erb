<!DOCTYPE html>
<html>
  <head>
    <title>CoffeeOrderSystem</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <body class="<%=controller_name%>-<%=action_name%>">

  <% if flash[:success] %>
      <h1><%= flash[:success] %></h1>
    <% end %>
    <% if flash[:error] %>
      <h1><%= flash[:error] %></h1>
    <% end %>

    <nav>
      <% unless @current_user.present? %>
        <%= link_to( "Login", login_path(),:class => "waves-effect waves-light btn" ) %>
        <%= link_to( "Sign up", new_user_path(),:class => "waves-effect waves-light btn" ) %>
      <% else %>
        <%= link_to( "Edit", edit_user_path(@current_user.id) ,:class => "waves-effect waves-light btn") %>
        <%= link_to( "Log out ", logout_path(), :method => :delete,:class => "waves-effect waves-light btn" ) %>
        <%= link_to 'Add Recipe', new_recipe_path,:class => "waves-effect waves-light btn" %>
      <% end %>
    </nav>
<%= yield %>


  </body>
</html>
